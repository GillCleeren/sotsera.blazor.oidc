@page "/"

<AuthorizeView>
    <Authorizing>
        Authorizing...
    </Authorizing>
    <Authorized>
        <ul class="nav nav-tabs mb-3" role="tablist">
            <li class="nav-item">
                <a @onclick="ShowClaims" class="nav-link @(_showClaims ? "active": "")" role="tab" href="javascript:void(0)">User Claims</a>
            </li>
            <li class="nav-item">
                <a @onclick="ShowApi" class="nav-link @(_showClaims ? "" : "active")" role="tab" href="javascript:void(0)">Test API</a>
            </li>
        </ul>
        <div class="tab-content">
            @if (_showClaims)
            {
                <div class="tab-pane fade show active" role="tabpanel"><About /></div>
            }
            else
            {
                <div class="tab-pane fade show active" role="tabpanel"><Api/></div>
            }
        </div>
    </Authorized>
    <NotAuthorized>
        LoggedOut
    </NotAuthorized>
</AuthorizeView>

@code
{
    bool _showClaims = true;
    
    void ShowClaims() => _showClaims = true;
    void ShowApi() => _showClaims = false;
}
